{
  "manifest_version": 3,
  "name": "RoundVest",
  "version": "1.0",
  "description": "Round up your purchases and invest the difference.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.com.tr/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*", "https://www.amazon.com.tr/*"],
      "js": ["content.js"],
      "css": ["src/Popup.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
